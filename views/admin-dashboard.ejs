<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - QuanLyLichTrinh</title>
  <%- include('theme-support') %>
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/admin.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  
  <!-- Socket.IO Client -->
  <script src="/socket.io/socket.io.js"></script>
</head>

<body>
  <%- include('header') %>

  <div class="admin-container">
    <!-- Main Content -->
    <main class="admin-main">
      <div class="admin-header">
        <div>
          <h1>Dashboard Overview</h1>
          <p>Tổng quan hệ thống</p>
        </div>
        <div class="admin-header-actions">
          <button class="btn-refresh" onclick="refreshDashboard()">
            <i class="fas fa-sync-alt"></i> Refresh
          </button>
        </div>
      </div>

      <!-- Stats Cards -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon blue">
            <i class="fas fa-users"></i>
          </div>
          <div class="stat-info">
            <h3 id="total-users"><%= overview.total_users || 0 %></h3>
            <p>Tổng người dùng</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon green">
            <i class="fas fa-user-check"></i>
          </div>
          <div class="stat-info">
            <h3 id="active-users"><%= overview.active_users || 0 %></h3>
            <p>Đang hoạt động</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon orange">
            <i class="fas fa-user-plus"></i>
          </div>
          <div class="stat-info">
            <h3 id="new-users"><%= overview.new_users_last_7_days || 0 %></h3>
            <p>User mới (7 ngày)</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon purple">
            <i class="fas fa-crown"></i>
          </div>
          <div class="stat-info">
            <h3 id="total-admins"><%= overview.total_admins || 0 %></h3>
            <p>Quản trị viên</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon red">
            <i class="fas fa-user-slash"></i>
          </div>
          <div class="stat-info">
            <h3 id="banned-users"><%= overview.banned_users || 0 %></h3>
            <p>Đã bị khóa</p>
          </div>
        </div>

        <!-- <div class="stat-card">
          <div class="stat-icon cyan">
            <i class="fas fa-tasks"></i>
          </div>
          <div class="stat-info">
            <h3 id="total-tasks"><%= overview.total_tasks || 0 %></h3>
            <p>Tổng Tasks</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon pink">
            <i class="fas fa-calendar-alt"></i>
          </div>
          <div class="stat-info">
            <h3 id="total-events"><%= overview.total_events || 0 %></h3>
            <p>Tổng Events</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon teal">
            <i class="fas fa-comments"></i>
          </div>
          <div class="stat-info">
            <h3 id="total-messages"><%= overview.total_messages || 0 %></h3>
            <p>Tổng Messages</p>
          </div>
        </div> -->
      </div>

      <!-- Charts Section -->
      <div class="charts-grid">
        <div class="chart-card">
          <div class="chart-header">
            <h3>Người dùng mới theo ngày</h3>
            <select id="chart-days" onchange="updateChart(this.value)">
              <option value="7">7 ngày</option>
              <option value="14">14 ngày</option>
              <option value="30">30 ngày</option>
            </select>
          </div>
          <canvas id="userActivityChart"></canvas>
        </div>

        <div class="chart-card">
          <div class="chart-header">
            <h3>Tỷ lệ trạng thái user</h3>
          </div>
          <canvas id="userStatusChart"></canvas>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="quick-actions">
        <h3>Quick Actions</h3>
        <div class="action-buttons">
          <a href="/admin/users" class="action-btn">
            <i class="fas fa-users-cog"></i>
            <span>Quản lý Users</span>
          </a>
          <a href="/admin/notifications" class="action-btn">
            <i class="fas fa-plus-circle"></i>
            <span>Tạo thông báo</span>
          </a>
          <a href="/admin/logs" class="action-btn">
            <i class="fas fa-file-alt"></i>
            <span>Xem Logs</span>
          </a>
        </div>
      </div>
    </main>
  </div>

  <script src="/js/header.js"></script>
  <script src="/js/banned-listener.js"></script>
  <script src="/js/admin.js"></script>
  <script>
    // Pass currentUserId to JavaScript
    window.currentUserId = <%= userId || 'null' %>;
    
    // Initialize charts with server data
    const activityData = JSON.parse('<%- JSON.stringify(activityStats || {}) %>');
    const overviewData = JSON.parse('<%- JSON.stringify(overview || {}) %>');
    
    initDashboard(activityData, overviewData);
  </script>
</body>
</html>
