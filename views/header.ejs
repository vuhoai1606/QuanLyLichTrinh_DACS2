<!-- header.html -->
<header>
  <div class="header-top">
    <!-- Nút menu mobile -->
    <div class="menu-toggle" id="menu-toggle">&#9776;</div> 
    
    <!-- Logo + tên app -->
    <div class="logo-section">
      <img src="/img/logo.jpg" alt="Logo" class="logo">
      <span class="app-name">TaskManager</span>
    </div>
  </div>

  <!-- Menu điều hướng -->
  <nav class="navbar">
    <ul class="nav-menu">
      <li><a href="/" class="nav-link"><i class="fas fa-tachometer-alt"></i><span>Dashboard</span></a></li>
      <li><a href="/tasks" class="nav-link"><i class="fas fa-tasks"></i><span>Tasks</span></a></li>
      <li><a href="/calendar" class="nav-link"><i class="fas fa-calendar"></i><span>Calendar</span></a></li>
      <li><a href="/kanban" class="nav-link"><i class="fas fa-columns"></i><span>Kanban</span></a></li>
      <li><a href="/timeline" class="nav-link"><i class="fas fa-stream"></i><span>Timeline</span></a></li>
      <li><a href="/reports" class="nav-link"><i class="fas fa-chart-bar"></i><span>Reports</span></a></li>
      <li><a href="/groups" class="nav-link"><i class="fas fa-users"></i><span>Groups</span></a></li>
      <li><a href="/notifications" class="nav-link"><i class="fas fa-bell"></i><span>Notifications</span></a></li>
      <li><a href="/export-import" class="nav-link"><i class="fas fa-exchange-alt"></i><span>Export / Import</span></a></li>
      <li><a href="/settings" class="nav-link"><i class="fas fa-cog"></i><span>Settings</span></a></li>
      <li><a href="/profile" class="nav-link"><i class="fas fa-user"></i><span>Profile</span></a></li>
      <!-- PHẦN TÀI KHOẢN -->
      <li class="dropdown" id="account-dropdown-container">
        <a href="javascript:void(0)" class="nav-link dropbtn" id="account-trigger">
          <i class="fas fa-user-circle" id="account-icon"></i>
          <span id="account-label"><%= fullName || 'Tài khoản' %></span>
          <i class="fas fa-caret-down" id="caret-icon"></i>
        </a>
        <div class="dropdown-content" id="account-dropdown">
          <% if (isAuthenticated) { %>
            <a href="/profile"><i class="fas fa-user"></i> Hồ sơ</a>
            <a href="/settings"><i class="fas fa-cog"></i> Cài đặt</a>
            <a href="javascript:void(0)" id="logout-btn"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
          <% } else { %>
            <a href="/login"><i class="fas fa-sign-in-alt"></i> Đăng nhập</a>
            <a href="/register"><i class="fas fa-user-plus"></i> Đăng ký</a>
          <% } %>
        </div>
      </li>
    </ul>
  </nav>
</header>