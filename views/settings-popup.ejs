<!-- Settings Popup Modal -->
<div id="settings-overlay" class="settings-overlay" style="display: none;">
  <div class="settings-popup">
    <div class="settings-popup-header">
      <h2><i class="fas fa-cog"></i> Cài đặt</h2>
      <button class="close-settings" onclick="closeSettingsPopup()">
        <i class="fas fa-times"></i>
      </button>
    </div>
    
    <div class="settings-popup-body">
      <!-- Theme Setting -->
      <div class="setting-item">
        <div class="setting-label">
          <i class="fas fa-palette"></i>
          <span>Giao diện</span>
        </div>
        <div class="setting-control">
          <label class="radio-option">
            <input type="radio" name="theme" value="system" checked>
            <span>Hệ thống</span>
          </label>
          <label class="radio-option">
            <input type="radio" name="theme" value="light">
            <span>Sáng</span>
          </label>
          <label class="radio-option">
            <input type="radio" name="theme" value="dark">
            <span>Tối</span>
          </label>
        </div>
      </div>

      <!-- Language Setting -->
      <div class="setting-item">
        <div class="setting-label">
          <i class="fas fa-language"></i>
          <span>Ngôn ngữ</span>
        </div>
        <div class="setting-control">
          <select id="language-select" class="language-dropdown">
            <option value="vi">Tiếng Việt</option>
            <option value="en">English</option>
          </select>
        </div>
      </div>

      <!-- Notifications Setting -->
      <div class="setting-item">
        <div class="setting-label">
          <i class="fas fa-bell"></i>
          <span>Thông báo</span>
        </div>
        <div class="setting-control">
          <label class="toggle-switch">
            <input type="checkbox" id="notifications-toggle" checked>
            <span class="toggle-slider"></span>
          </label>
          <span class="toggle-status" id="notifications-status">Bật</span>
        </div>
      </div>

      <!-- 2FA Setting -->
      <div class="setting-item">
        <div class="setting-label">
          <i class="fas fa-shield-alt"></i>
          <span>Xác thực 2 bước (2FA)</span>
        </div>
        <div class="setting-control">
          <label class="toggle-switch">
            <input type="checkbox" id="2fa-toggle">
            <span class="toggle-slider"></span>
          </label>
          <span class="toggle-status" id="2fa-status">Đang tải...</span>
        </div>
      </div>
    </div>

    <div class="settings-popup-footer">
      <button class="btn-secondary" onclick="closeSettingsPopup()">
        <i class="fas fa-times"></i> Đóng
      </button>
      <button class="btn-primary" onclick="saveSettings()">
        <i class="fas fa-save"></i> Lưu thay đổi
      </button>
    </div>
  </div>
</div>

<!-- 2FA Confirmation Modal -->
<div id="2fa-modal" class="modal-overlay">
  <div class="modal-content">
    <div class="modal-header">
      <h3 id="2fa-modal-title">Bật xác thực 2 bước</h3>
      <button class="close-modal" onclick="close2FAModal()">&times;</button>
    </div>
    <div class="modal-body" id="2fa-modal-body">
      <!-- Nội dung sẽ được JS fill -->
    </div>
    <div class="modal-footer">
      <button class="btn-secondary" onclick="close2FAModal()">Hủy</button>
      <button class="btn-primary" id="2fa-confirm-btn">Xác nhận</button>
    </div>
  </div>
</div>

<link rel="stylesheet" href="/css/settings-popup.css">
<script src="/js/settings-popup.js"></script>