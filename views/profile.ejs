<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hồ sơ cá nhân - TaskManager</title>
  <link rel="stylesheet" href="/css/profile.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="/css/header.css">
</head>
<body>
  <!-- Header -->
  <%- include('header') %>

  <!-- Nội dung chính -->
  <div class="profile-container">
    <div class="profile-card glass">
      <div class="profile-header">
        <img src="/img/avt 1.jpg" alt="Avatar" class="avatar">
        <h2 id="user-name">Nguyễn Văn A</h2>
        <p class="role">Project Manager</p>
      </div>

      <div class="profile-info">
        <p><i class="fas fa-envelope"></i> <span id="user-email">nguyenvana@example.com</span></p>
        <p><i class="fas fa-phone"></i> <span id="user-phone">+84 912 345 678</span></p>
        <p><i class="fas fa-calendar"></i> <span id="user-joined">Tham gia: 01/01/2025</span></p>
      </div>

      <div class="profile-actions">
        <button id="edit-btn"><i class="fas fa-edit"></i> Chỉnh sửa</button>
        <button id="logout-btn" class="logout"><i class="fas fa-sign-out-alt"></i> Đăng xuất</button>
      </div>
    </div>
  </div>

  <!-- Modal overlay -->
  <div class="modal-overlay" id="modal-overlay"></div>

  <!-- Modal chỉnh sửa -->
  <div class="modal" id="edit-modal">
    <div class="card">
      <h2>Chỉnh sửa hồ sơ</h2>
      <form id="edit-form">
        <div class="form-group">
          <label for="edit-name">Tên</label>
          <input type="text" id="edit-name" required>
        </div>
        <div class="form-group">
          <label for="edit-email">Email</label>
          <input type="email" id="edit-email" required>
        </div>
        <div class="form-group">
          <label for="edit-phone">Số điện thoại</label>
          <input type="tel" id="edit-phone" required>
        </div>
        <div class="form-group">
          <label for="edit-password">Mật khẩu mới</label>
          <input type="password" id="edit-password" placeholder="Nhập mật khẩu mới">
        </div>
        <div class="form-group">
          <label for="timezone-select">Timezone</label>
          <select id="timezone-select"></select>
        </div>
        <div class="form-group">
          <label>Avatar</label>
          <img id="user-avatar" src="../assets/img/logo.jpg" alt="Avatar" width="120" height="120">
          <input type="file" id="avatar-upload" accept="image/*">
          <button type="button" id="google-sync">Sync với Google</button>
        </div>
        <div class="buttons">
          <button type="button" id="close-modal">Hủy</button>
          <button type="submit" class="btn-primary">Lưu</button>
        </div>
      </form>
    </div>
  </div>

  <script src="/js/profile.js"></script>
  <script src="/js/header.js"></script>
</body>
</html>
