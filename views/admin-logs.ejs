<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Audit Logs - Admin</title>
  <%- include('theme-support') %>
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/admin.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <script src="/socket.io/socket.io.js"></script>
</head>

<body>
  <%- include('header') %>

  <div class="admin-container">
    <main class="admin-main">
      <div class="admin-header">
        <div>
          <h1>Audit Logs</h1>
          <p>Lịch sử hành động của admin</p>
        </div>
        <div class="header-actions">
          <button class="btn-danger" id="delete-selected-btn" style="display: none;">
            <i class="fas fa-trash"></i> Xóa đã chọn (<span id="selected-count">0</span>)
          </button>
        </div>
      </div>

      <div class="filters-bar">
        <div class="checkbox-group">
          <label class="checkbox-label">
            <input type="checkbox" id="select-all-logs">
            <span>Chọn tất cả</span>
          </label>
        </div>
        
        <select id="action-filter">
          <option value="">Tất cả hành động</option>
          <option value="grant_admin">Cấp quyền admin</option>
          <option value="revoke_admin">Thu hồi admin</option>
          <option value="ban_user">Khóa user</option>
          <option value="unban_user">Mở khóa user</option>
          <option value="delete_user">Xóa user</option>
          <option value="create_notification">Tạo thông báo</option>
          <option value="delete_notification">Xóa thông báo</option>
        </select>
        
        </div>

      <div class="logs-timeline" id="logs-timeline">
        <div class="loading">
          <i class="fas fa-spinner fa-spin"></i> Đang tải logs...
        </div>
      </div>

      <div class="pagination" id="pagination"></div>
    </main>
  </div>

  <!-- Action Modal -->
  <div id="action-modal" class="modal">
    <div class="modal-content modal-sm">
      <div class="modal-header">
        <h2 id="action-modal-title">Xác nhận</h2>
        <button class="modal-close" onclick="closeActionModal()">&times;</button>
      </div>
      <div class="modal-body">
        <p id="action-modal-message"></p>
        <textarea id="action-reason" placeholder="Lý do (bắt buộc)" style="display:none;"></textarea>
        <div class="modal-actions">
          <button class="btn-cancel" onclick="closeActionModal()">Hủy</button>
          <button class="btn-confirm" id="action-confirm-btn">Xác nhận</button>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/header.js"></script>
  <script src="/js/banned-listener.js"></script>
  <script src="/js/admin.js"></script>
  <script>
    // Pass currentUserId to JavaScript
    window.currentUserId = <%= userId || 'null' %>;
    
    // Initialize logs page
    initLogsPage();
  </script>
</body>
</html>