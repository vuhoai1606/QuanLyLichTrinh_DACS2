<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard • TaskManager Pro</title>

  <!-- CSS -->
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/index.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>

  <%- include('header') %>

  <main class="dashboard">

    <!-- Header đẹp lung linh -->
    <div class="dash-header">
      <div>
        <h1><i class="fas fa-sparkles text-yellow-400"></i> Dashboard</h1>
        <p id="greeting-time"><i class="far fa-calendar-check"></i> Tổng quan công việc & lịch trình hôm nay</p>
      </div>
      <div class="header-actions">
        <button class="btn-ghost" id="quick-add-btn">
          <i class="fas fa-bolt"></i> Thêm nhanh
        </button>
      </div>
    </div>

    <!-- 4 ô thống kê đẹp như app pro -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon done"><i class="fas fa-circle-check"></i></div>
        <div>
          <p>Hoàn thành</p>
          <h3 id="stat-done">0</h3>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon progress"><i class="fas fa-clock-rotate-left"></i></div>
        <div>
          <p>Đang thực hiện</p>
          <h3 id="stat-progress">0</h3>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon overdue"><i class="fas fa-triangle-exclamation"></i></div>
        <div>
          <p>Trễ hạn</p>
          <h3 id="stat-overdue">0</h3>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon total"><i class="fas fa-list-check"></i></div>
        <div>
          <p>Tổng nhiệm vụ</p>
          <h3 id="stat-total">0</h3>
        </div>
      </div>
    </div>

    <!-- Grid chính -->
    <div class="main-grid">

      <!-- CỘT TRÁI - GIỮ NGUYÊN TẤT CẢ ID CŨ -->
      <div class="left-col">

        <!-- Welcome Card -->
        <div class="glass-card highlight">
          <h2 id="welcome-message">Xin chào</h2>
          <p>Đây là tổng quan công việc và lịch trình của bạn hôm nay.</p>
        </div>

        <!-- Today's Tasks -->
        <div class="glass-card">
          <h2>Công việc hôm nay</h2>
          <ul id="today-tasks" class="task-list"></ul>
        </div>

        <!-- Quick Add Task -->
        <div class="glass-card">
          <h2>Thêm nhiệm vụ nhanh</h2>
          <form id="quick-add" class="quick-form">
            <input type="text" id="quick-title" placeholder="Nhập tiêu đề..." required>
            <input type="date" id="quick-due">
            <button type="submit" class="btn-primary">+ Thêm</button>
          </form>
        </div>

        <!-- Mini Calendar -->
        <div class="glass-card">
          <h2>Lịch trình hôm nay / tuần</h2>
          <div id="mini-calendar"></div>
          <ul id="calendar-events"></ul>
        </div>

        <!-- Quick Event -->
        <div class="glass-card">
          <h2>Thêm sự kiện nhanh</h2>
          <form id="quick-event" class="quick-form">
            <input type="text" id="quick-event-title" placeholder="Tên sự kiện..." required>
            <input type="datetime-local" id="quick-event-start" required>
            <input type="datetime-local" id="quick-event-end">
            <button type="submit" class="btn-primary">+ Thêm sự kiện</button>
          </form>
        </div>

        <!-- Tags -->
        <div class="glass-card">
          <h2>Tags</h2>
          <div class="tags">
            <span class="tag">Work</span>
            <span class="tag">Study</span>
            <span class="tag">Personal</span>
          </div>
        </div>

        <!-- Ghi chú nhanh -->
        <div class="glass-card">
          <h2>Ghi chú nhanh</h2>
          <input type="text" id="quick-note-input" placeholder="Nhập ghi chú...">
          <button id="add-note-btn" class="btn-primary">+ Thêm ghi chú</button>
          <ul id="notes-list"></ul>
        </div>

      </div>

      <!-- CỘT PHẢI - GIỮ NGUYÊN ID ĐỂ JS HOẠT ĐỘNG -->
      <div class="right-col">

        <!-- Thống kê cũ (giữ nguyên) -->
        <div class="glass-card">
          <h2>Thống kê</h2>
          <p>Hoàn thành: <span id="stat-done">0</span></p>
          <p>Trễ hạn: <span id="stat-overdue">0</span></p>
          <p>Tổng: <span id="stat-total">0</span></p>
          <div class="progress-bar">
            <div class="progress" id="progress-bar"></div>
          </div>
        </div>

        <!-- Upcoming Events -->
        <div class="glass-card">
          <h2>Sự kiện sắp tới</h2>
          <ul id="upcoming-events" class="event-list"></ul>
        </div>

        <!-- Weather - GIỮ NGUYÊN ID weather-box ĐỂ JS LẤY API BÌNH THƯỜNG -->
        <div class="glass-card weather-card">
          <h2>Thời tiết hôm nay (Đà Nẵng)</h2>
          <div id="weather-box" class="weather-content">
            <!-- JS sẽ tự động chèn dữ liệu API vào đây
          </div>
        </div>

        <!-- Timeline Chart -->
        <div class="glass-card chart-card">
          <h2>Timeline Chart</h2>
          <canvas id="timelineChart"></canvas>
        </div>

      </div>
    </div>

    <!-- Global Search -->
    <div class="glass-card search-card">
      <h2>Tìm kiếm & Thống kê</h2>
      <div class="search-box">
        <input type="text" id="global-search" placeholder="Tìm kiếm nhiệm vụ, sự kiện, ghi chú..." class="search-input">
        <a href="/reports" class="btn-secondary">Xem Thống Kê Chi Tiết</a>
      </div>
    </div>

  </main>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="/js/index.js"></script>
  <script src="/js/header.js"></script>
</body>
</html>