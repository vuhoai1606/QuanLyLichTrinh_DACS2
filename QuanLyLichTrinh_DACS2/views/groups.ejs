<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>StarConnect - Groups</title>
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/groups.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
  <!-- Header -->
  <%- include('header') %>

  <div class="chat-container">
    <!-- Sidebar -->
    <div class="chat-sidebar">
      <div class="sidebar-header">
        <h2>StarConnect</h2>
        <button id="new-group" class="btn-add" title="Tạo nhóm mới"><i class="fas fa-plus"></i></button>
      </div>

      <div class="sidebar-section">
        <h4>NHÓM</h4>
        <ul id="group-chat-list" class="chat-list"></ul>
      </div>

      <div class="sidebar-section">
        <h4>TRÒ CHUYỆN 1-1</h4>
        <button id="new-chat" class="btn-add-small" title="Bắt đầu chat mới"><i class="fas fa-comment-medical"></i></button>
        <ul id="one-to-one-chat-list" class="chat-list"></ul>
      </div>
    </div>

    <!-- Main Chat Area -->
    <div class="chat-area">
      <div class="empty-chat">
        <h2>Chọn nhóm để bắt đầu</h2>
        <p>Trực tuyến gần đây</p>
      </div>

      <div class="chat-content hidden">
        <div class="chat-header">
          <div class="chat-header-info">
            <h3 id="chat-title">Tên nhóm</h3>
            <span id="chat-time" class="chat-last-seen">Trực tuyến gần đây</span>
          </div>
          <div class="chat-header-actions">
            <button class="chat-action-btn" title="Gọi video"><i class="fas fa-video"></i></button>
            <button class="chat-action-btn" title="Gọi thoại"><i class="fas fa-phone"></i></button>
            <button class="chat-action-btn" title="Tùy chọn"><i class="fas fa-ellipsis-v"></i></button>
            <button id="btn-share-events" class="chat-action-btn" title="Chia sẻ lịch trình"><i class="fas fa-calendar-alt"></i></button>
          </div>
        </div>

        <div class="chat-messages" id="chat-messages"></div>

        <div class="chat-input-area">
          <button class="chat-emoji-btn" title="Chèn emoji"><i class="fas fa-smile"></i></button>
          <input type="file" id="chat-file" accept="image/*,video/*" style="display:none;">
          <button class="chat-attach-btn" title="Đính kèm file"><i class="fas fa-paperclip"></i></button>
          <input type="text" id="chat-input" class="chat-input" placeholder="Nhập tin nhắn..." autocomplete="off" />
          <button class="chat-send-btn" title="Gửi"><i class="fa fa-paper-plane"></i></button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal: Tạo nhóm mới -->
  <div id="new-group-modal" class="modal hidden">
    <div class="modal-content">
      <h3>Tạo nhóm mới</h3>
      <input type="text" id="group-name" placeholder="Tên nhóm..." class="chat-input">
      <input type="text" id="group-desc" placeholder="Mô tả nhóm..." class="chat-input" style="margin-top: 8px;">
      <div class="modal-actions">
        <button id="create-group" class="btn-primary">Tạo nhóm</button>
        <button id="close-group-modal" class="btn-secondary">Hủy</button>
      </div>
    </div>
  </div>

  <!-- Modal: Chat 1-1 -->
  <div id="new-chat-modal" class="modal hidden">
    <div class="modal-content">
      <h3>Tìm bạn để chat</h3>
      <input type="text" id="friend-search" placeholder="Nhập tên bạn..." class="chat-input">
      <ul id="friend-list" class="chat-list"></ul>
      <div class="modal-actions">
        <button id="start-chat" class="btn-primary">Bắt đầu chat</button>
        <button id="close-chat-modal" class="btn-secondary">Đóng</button>
      </div>
    </div>
  </div>

  <!-- Modal: Chia sẻ sự kiện/lịch trình -->
  <div id="share-events-modal" class="modal hidden">
    <div class="modal-content">
      <h3>Chia sẻ sự kiện / công việc</h3>
      <input type="text" id="event-title" placeholder="Tên sự kiện / task">
      <input type="datetime-local" id="event-datetime">
      <select id="event-members" multiple>
        <!-- Danh sách thành viên sẽ generate JS -->
      </select>
      <div class="modal-actions">
        <button id="btn-share-event-submit" class="btn-primary">Chia sẻ</button>
        <button id="close-share-event" class="btn-outline">Đóng</button>
      </div>
    </div>
  </div>

  <script src="/js/header.js"></script>
  <script src="/js/groups.js"></script>
</body>
</html>