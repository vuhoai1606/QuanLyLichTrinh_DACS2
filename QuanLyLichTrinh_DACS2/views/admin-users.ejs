<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản lý tài khoản - Admin</title>
  <%- include('theme-support') %>
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/admin.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Socket.IO Client -->
  <script src="/socket.io/socket.io.js"></script>
</head>

<body>
  <%- include('header') %>

  <div class="admin-container">
    <main class="admin-main">
      <div class="admin-header">
        <h1>Quản lý tài khoản</h1>
      </div>

      <div class="filters-bar">
        <div class="search-box">
          <i class="fas fa-search"></i>
          <input type="text" id="search-input" placeholder="Tìm kiếm theo username, email, tên...">
        </div>
        
        <select id="role-filter">
          <option value="">Tất cả roles</option>
          <option value="admin">Admin</option>
          <option value="user">User</option>
        </select>
        
        <select id="status-filter">
          <option value="">Tất cả trạng thái</option>
          <option value="active">Hoạt động</option>
          <option value="banned">Đã khóa</option>
        </select>
        
        </div>

      <div class="table-container">
        <table class="admin-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Email</th>
              <th>Họ tên</th>
              <th>Role</th>
              <th>Trạng thái</th>
              <th>Đăng ký</th>
              <th>Hoạt động</th>
              <th>Thao tác</th>
            </tr>
          </thead>
          <tbody id="users-tbody">
            <tr>
              <td colspan="9" class="loading">
                <i class="fas fa-spinner fa-spin"></i> Đang tải...
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="pagination" id="pagination"></div>
    </main>
  </div>

  <div id="user-modal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Chi tiết người dùng</h2>
        <button class="modal-close" onclick="closeUserModal()">&times;</button>
      </div>
      <div class="modal-body" id="user-detail-content">
        </div>
    </div>
  </div>

  <div id="action-modal" class="modal">
    <div class="modal-content modal-sm">
      <div class="modal-header">
        <h2 id="action-modal-title">Xác nhận</h2>
        <button class="modal-close" onclick="closeActionModal()">&times;</button>
      </div>
      <div class="modal-body">
        <p id="action-modal-message"></p>
        <textarea id="action-reason" placeholder="Lý do (bắt buộc)" style="display:none;"></textarea>
        <div class="modal-actions">
          <button class="btn-cancel" onclick="closeActionModal()">Hủy</button>
          <button class="btn-confirm" id="action-confirm-btn">Xác nhận</button>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/header.js"></script>
  <script src="/js/banned-listener.js"></script>
  <script src="/js/admin.js"></script>
  <script>
    // Pass currentUserId to JavaScript
    window.currentUserId = <%= currentUserId || 'null' %>;
    
    // Initialize users page
    initUsersPage();
  </script>
</body>
</html>