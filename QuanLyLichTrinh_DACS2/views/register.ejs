<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/register.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" crossorigin="anonymous">
  <title>Đăng ký - TaskManager</title>
  <style>
    .required-mark {
      color: #ef4444;
      margin-left: 3px;
    }
    label {
      font-weight: 600;
    }
  </style>
</head>
<body>
  <div class="register-container">
    <div class="register-card">
      <h3>Đăng ký</h3>
      <form id="register-form">

        <!-- Username -->
        <div class="form-group">
          <label for="register-username">Tên đăng nhập<span class="required-mark">*</span></label>
          <input type="text" id="register-username" placeholder="Nhập tên đăng nhập" required>
          <span class="error" id="username-error"></span>
          
          <!-- Username validation checklist -->
          <div class="username-requirements" id="username-requirements">
            <p style="font-size: 12px; color: #64748b; margin: 0 0 4px 0;">Tên đăng nhập phải:</p>
            <ul style="list-style: none; padding: 0; margin: 0;">
              <li id="req-username-length" style="font-size: 12px; color: #94a3b8;">
                <i class="fas fa-circle" style="font-size: 6px;"></i> Ít nhất 5 ký tự
              </li>
              <li id="req-username-valid" style="font-size: 12px; color: #94a3b8;">
                <i class="fas fa-circle" style="font-size: 6px;"></i> Không sử dụng ký tự đặc biệt (!@#$%^&*...)
              </li>
              <li id="req-username-no-space" style="font-size: 12px; color: #94a3b8;">
                <i class="fas fa-circle" style="font-size: 6px;"></i> Không có khoảng trắng
              </li>
            </ul>
          </div>
        </div>

        <!-- Fullname -->
        <div class="form-group">
          <label for="register-fullname">Họ tên<span class="required-mark">*</span></label>
          <input type="text" id="register-fullname" placeholder="Nhập họ tên" required>
          <span class="error" id="fullname-error"></span>
        </div>

        <!-- Email -->
        <div class="form-group">
          <label for="register-email">Email<span class="required-mark">*</span></label>
          <input type="email" id="register-email" placeholder="Nhập email" required>
          <span class="error" id="email-error"></span>
        </div>

        <!-- Password -->
        <div class="form-group">
          <label for="register-password">Mật khẩu<span class="required-mark">*</span></label>
          <input type="password" id="register-password" placeholder="Nhập mật khẩu" required>
          <span class="error" id="password-error"></span>
          
          <!-- Password validation checklist -->
          <div class="password-requirements" id="password-requirements">
            <p style="font-size: 12px; color: #64748b; margin: 0 0 4px 0;">Mật khẩu phải:</p>
            <ul style="list-style: none; padding: 0; margin: 0;">
              <li id="req-length" style="font-size: 12px; color: #94a3b8;">
                <i class="fas fa-circle" style="font-size: 6px;"></i> Ít nhất 6 ký tự
              </li>
              <li id="req-letter" style="font-size: 12px; color: #94a3b8;">
                <i class="fas fa-circle" style="font-size: 6px;"></i> Có chữ cái
              </li>
              <li id="req-number" style="font-size: 12px; color: #94a3b8;">
                <i class="fas fa-circle" style="font-size: 6px;"></i> Có số
              </li>
            </ul>
          </div>
        </div>

        <!-- Gender -->
        <div class="form-group">
          <label for="register-gender">Giới tính</label>
          <div class="radio-group" style="display: flex; gap: 20px; margin-top: 8px;">
            <label class="radio-label" style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
              <input type="radio" name="gender" value="Nam" style="cursor: pointer;">
              <span>Nam</span>
            </label>
            <label class="radio-label" style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
              <input type="radio" name="gender" value="Nữ" style="cursor: pointer;">
              <span>Nữ</span>
            </label>
            <label class="radio-label" style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
              <input type="radio" name="gender" value="Khác" style="cursor: pointer;">
              <span>Khác</span>
            </label>
          </div>
        </div>

        <!-- Phone Number -->
        <div class="form-group">
          <label for="register-phone">Số điện thoại</label>
          <input type="tel" id="register-phone" placeholder="Nhập số điện thoại" maxlength="10" pattern="[0-9]{10}">
          <span class="error" id="phone-error"></span>
        </div>

        <!-- Date of Birth -->
        <div class="form-group">
          <label for="register-dob">Ngày sinh</label>
          <input type="date" id="register-dob">
        </div>

        <!-- CAPTCHA -->
        <div class="form-group captcha-group">
          <label for="captcha-input">Mã kiểm tra<span class="required-mark">*</span></label>
          <div class="captcha-container">
            <img id="captcha-image" src="/api/captcha" alt="CAPTCHA" style="border: 1px solid #e2e8f0; border-radius: 4px;">
            <button type="button" id="reloadCaptcha" title="Tải lại mã"><i class="fas fa-sync-alt"></i></button>
          </div>
          <div class="captcha-input-wrapper">
            <i class="fas fa-shield-alt"></i>
            <input type="text" id="captcha-input" placeholder="Nhập mã kiểm tra" required autocomplete="off">
          </div>
          <span class="error" id="captcha-error"></span>
        </div>

        <!-- Submit -->
        <button type="submit" class="btn-primary">Đăng ký</button>
        <p class="text-center">Đã có tài khoản? <a href="/login">Đăng nhập</a></p>
      </form>
    </div>
  </div>

  <script src="/js/register.js" defer></script>
</body>
</html>