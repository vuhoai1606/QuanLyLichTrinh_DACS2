    <!-- Kanban Container -->
    <div class="kanban-container">
      <div class="kanban-board" id="kanban-board">
        <!-- Columns will be dynamically added here -->
        <!-- Example column structure:-->
        <div class="col">
          <div class="col-header">
            <h3>Column Title</h3>
            <span class="col-count">0</span>
            <i class="fas fa-ellipsis-h col-options"></i>
          </div>
          <div class="col-content" data-column="todo">
            <button class="add-task-btn">
              <i class="fas fa-plus"></i> Add Task
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal: Task Detail -->
  <div id="task-detail-modal" class="modal">
    <div class="modal-content">
      <h3>Task Detail</h3>
      <input type="text" id="task-title" placeholder="Task Title" class="input-field">
      <textarea id="task-desc" placeholder="Description" class="input-field"></textarea>
      <input type="date" id="task-due" class="input-field">
      <select id="task-priority" class="input-field">
        <option value="">Select Priority</option>
        <option value="high">ðŸ”´ High Priority</option>
        <option value="medium">ðŸŸ¡ Medium Priority</option>
        <option value="low">ðŸŸ¢ Low Priority</option>
      </select>
      <input type="text" id="task-assignee" placeholder="Assignee Name" class="input-field">
      <input type="number" id="task-progress" placeholder="Progress (%)" class="input-field" min="0" max="100">
      <div class="modal-actions">
        <button id="save-task" class="btn btn-primary">
          <i class="fas fa-check"></i> Save
        </button>
        <button id="delete-task" class="btn btn-danger">
          <i class="fas fa-trash"></i> Delete
        </button>
        <button id="close-detail" class="btn btn-secondary">
          <i class="fas fa-times"></i> Close
        </button>
      </div>
    </div>
  </div>

  <!-- Modal: Edit Column -->
  <div id="column-edit-modal" class="modal">
    <div class="modal-content">
      <h3>Edit Column</h3>
      <input type="text" id="column-title" placeholder="Column Title" class="input-field">
      <input type="color" id="column-color" class="input-field" value="#6366f1">
      <div class="modal-actions">
        <button id="save-column" class="btn btn-primary">
          <i class="fas fa-check"></i> Save
        </button>
        <button id="delete-column" class="btn btn-danger">
          <i class="fas fa-trash"></i> Delete
        </button>
        <button id="close-column" class="btn btn-secondary">
          <i class="fas fa-times"></i> Close
        </button>
      </div>
    </div>
  </div>

