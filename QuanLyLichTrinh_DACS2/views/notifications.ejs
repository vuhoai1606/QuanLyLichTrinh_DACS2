<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/notifications.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <title>Notifications</title>
</head>
<body>
  <!-- Header -->
  <%- include('header') %>

  <!-- Nội dung chính -->
  <div class="main-content">
    <div class="dashboard-header">
      <h1>Notifications</h1>
      <p class="subtitle">Thông báo mới</p>

      <!-- Filter theo loại -->
      <div class="notification-filters">
        <button class="filter-btn" data-type="all">Tất cả</button>
        <button class="filter-btn" data-type="task">Tasks</button>
        <button class="filter-btn" data-type="event">Events</button>
        <button class="filter-btn" data-type="group">Groups</button>
      </div>

      <button id="mark-read" class="btn-primary">Mark all read</button>
    </div>

    <div class="dashboard-grid">
      <div class="card">
        <ul id="noti-list"></ul>
      </div>
    </div>
  </div>

  <script src="/js/header.js"></script>
  <script src="/js/notifications.js"></script>
</body>
</html>