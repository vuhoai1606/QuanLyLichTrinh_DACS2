<!-- header.html -->
<header>
  <!-- HÀNG 1: Logo + TaskManager (luôn hiện đủ chữ) -->
  <div class="header-row row-top">
    <button class="menu-toggle" id="menu-toggle">
      <i class="fas fa-bars"></i>
    </button>

    <div class="logo-section">
      <img src="/img/logo.jpg" alt="Logo" class="logo">
      <span class="app-name">TaskManager</span>
    </div>
  </div>

  <!-- HÀNG 2: 3 nút chính - luôn hiển thị rõ ràng, đẹp -->
  <div class="header-row row-bottom">
    <!-- Thông báo -->
    <div class="action-btn" data-tooltip="Thông báo">
      <a href="/notifications" class="notif-link">
        <i class="fas fa-bell"></i>
        <span id="notif-badge" class="notif-badge">0</span>
      </a>
    </div>

    <!-- Sync with Google -->
    <button id="googleSyncBtn" class="action-btn sync-btn" data-tooltip="Sync with Google">
      <i class="fas fa-sync"></i>
      <span class="btn-text">Sync with Google</span>
    </button>
  </div>

  <!-- Menu điều hướng -->
  <nav class="navbar">
      <ul class="nav-menu">

        <li><a href="/" class="nav-link <%= active === 'dashboard' ? 'active' : '' %>">
          <i class="fas fa-tachometer-alt"></i><span>Home</span></a></li>

        <li><a href="/tasks" class="nav-link <%= active === 'tasks' ? 'active' : '' %>">
          <i class="fas fa-tasks"></i><span>Tasks</span></a></li>

        <li><a href="/calendar" class="nav-link <%= active === 'calendar' ? 'active' : '' %>">
          <i class="fas fa-calendar"></i><span>Calendar</span></a></li>

        <li><a href="/kanban" class="nav-link <%= active === 'kanban' ? 'active' : '' %>">
          <i class="fas fa-columns"></i><span>Kanban</span></a></li>

        <!-- <li><a href="/timeline" class="nav-link <%= active === 'timeline' ? 'active' : '' %>">
          <i class="fas fa-stream"></i><span>Timeline</span></a></li> -->

        <li><a href="/reports" class="nav-link <%= active === 'reports' ? 'active' : '' %>">
          <i class="fas fa-chart-bar"></i><span>Reports</span></a></li>

        <li><a href="/messages" class="nav-link <%= active === 'messages' ? 'active' : '' %>">
          <i class="fas fa-comments"></i><span>Messages</span></a></li>

        <!-- <li><a href="/notifications" class="nav-link <%= active === 'notifications' ? 'active' : '' %>">
          <i class="fas fa-bell"></i><span>Notifications</span></a></li> -->

        <li><a href="/export-import" class="nav-link <%= active === 'export' ? 'active' : '' %>">
          <i class="fas fa-exchange-alt"></i><span>Export / Import</span></a></li>

        <!-- ADMIN MENU - Chỉ hiện nếu user là admin -->
        <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
        <li><a href="/admin/dashboard" class="nav-link <%= active === 'admin-dashboard' || active === 'admin-users' || active === 'admin-notifications' || active === 'admin-logs' ? 'active' : '' %>" style="<%= active === 'admin-dashboard' || active === 'admin-users' || active === 'admin-notifications' || active === 'admin-logs' ? '' : 'background: linear-gradient(135deg, #6366f1, #8b5cf6); color: white; font-weight: 700;' %>">
          <i class="fas fa-shield-alt"></i><span>Admin Panel</span></a></li>
        <% } %>

        <!-- ACCOUNT SECTION -->
        <li class="dropdown" id="account-dropdown-container">
          <a class="nav-link dropbtn" id="account-trigger">
              <i class="fas fa-user-circle"></i>
              <span id="account-label"><%= fullName || "Account" %></span>
              <i class="fas fa-caret-down"></i>
          </a>

          <div class="dropdown-content" id="account-dropdown">
            <% if (isAuthenticated) { %>
              <a href="/profile"><i class="fas fa-user"></i> Profile</a>
              <a href="javascript:void(0)" onclick="showSettingsPopup()"><i class="fas fa-cog"></i>Setting</a>
              <a href="javascript:void(0)" id="logout-btn"><i class="fas fa-sign-out-alt"></i>Logout</a>
            <% } else { %>
              <a href="/login"><i class="fas fa-sign-in-alt"></i>Login</a>
              <a href="/register"><i class="fas fa-user-plus"></i>Register</a>
            <% } %>
          </div>
        </li>

      </ul>
  </nav>
</header>

<!-- Settings Popup -->
<%- include('settings-popup') %>